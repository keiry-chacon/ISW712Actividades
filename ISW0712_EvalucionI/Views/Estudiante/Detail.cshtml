@model Estudiante

<h2>Detalles del Estudiante</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Nombre</h4>

        <dl class="row">
            <dt class="col-sm-3">Identificador:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Cédula:</dt>
            <dd class="col-sm-9">@Model.Cedula</dd>

            <dt class="col-sm-3">Estado:</dt>
            <dd class="col-sm-9">@Model.Estado</dd>
        </dl>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Volver</a>