@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fa;
            color: #333;
        }
        .container {
            margin-top: 50px;
        }
        .card {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }
        .card-header {
            background-color: #e2e6ea;
            font-size: 1.5rem;
            font-weight: bold;
        }
        .card-body p {
            font-size: 1.2rem;
            line-height: 1.6;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            font-size: 1.1rem;
            border-radius: 5px;
            text-transform: uppercase;
            font-weight: bold;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

<div class="container text-center">
    <h1 class="display-4 text-primary mb-4">Bienvenido</h1>
    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Información de la Universidad
                </div>
                <div class="card-body">
                    <p><strong>Nombre de la Universidad:</strong> Universidad Nacional</p>
                    <p><strong>Carrera:</strong> Ingeniería del Software</p>
                        <p><strong>Nombre del Curso:</strong> Ingeniería del SoftwareII</p>
                    <p><strong>Código del Curso:</strong> ISW0712</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Información del Estudiante
                </div>
                <div class="card-body">
                    <p><strong>Cédula:</strong> 402670948</p>
                    <p><strong>Nombre:</strong> Keiry Chacón Sibaja</p>
                    <p><strong>Edad:</strong> 19 años</p>
                    <p><strong>Lugar de Residencia:</strong> Ciudad Quesada</p>
                </div>
            </div>
        </div>
    </div>

    <a href="https://learn.microsoft.com/aspnet/core" class="btn btn-primary">Aprende más sobre ASP.NET Core</a>
</div>

</body>
</html>

