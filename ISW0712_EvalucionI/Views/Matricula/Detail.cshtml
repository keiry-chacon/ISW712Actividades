@model Matricula

<h2>Detalles de la Matrícula</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Matrícula #@Model.Id</h4>

        <!-- Detalles de la Matrícula -->
        <dl class="row">
            <dt class="col-sm-3">Fecha:</dt>
            <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>
        </dl>

        <!-- Detalles del Estudiante -->
        <h5 class="mt-3">Detalles del Estudiante</h5>
        <dl class="row">
            <dt class="col-sm-3">Nombre:</dt>
            <dd class="col-sm-9">@Model.Estudiante.Nombre @Model.Estudiante.Apellido1 @Model.Estudiante.Apellido2</dd>

            <dt class="col-sm-3">Cédula:</dt>
            <dd class="col-sm-9">@Model.Estudiante.Cedula</dd>

            <dt class="col-sm-3">Sexo:</dt>
            <dd class="col-sm-9">@Model.Estudiante.Sexo</dd>
        </dl>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
