@model IEnumerable<Matricula>

<h1>Matrículas</h1>
<a asp-controller="Matricula" asp-action="Create" class="btn btn-success" type="button">Agregar Matrícula</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(m => m.Id)</th>
            <th scope="col">Fecha</th>
            <th scope="col">Estudiante</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var matricula in Model)
            {
                <tr>
                    <th scope="row">@matricula.Id</th>
                    <td>@matricula.Fecha.ToShortDateString()</td>
                    <td>@matricula.EstudianteId</td>
                    <td>
                        <a asp-controller="Matricula" asp-action="Editar" asp-route-id="@matricula.Id" class="btn btn-warning" type="button">Editar</a>
                        <a asp-controller="Matricula" asp-action="Detail" asp-route-id="@matricula.Id" class="btn btn-info" type="button">Detalle</a>
                        <a href="javascript:void(0);" class="btn btn-danger" onclick="confirmarEliminacion(@matricula.EstudianteId)">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    function confirmarEliminacion(id) {
        if (confirm("¿Está seguro de que desea eliminar este estudiante? Esta acción no se puede deshacer.")) {
            window.location.href = "/Matricula/Delete/" + id;
        }
    }
</script>